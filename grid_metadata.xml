<theme>
    <formatVersion>4</formatVersion>

	<view name="grid"> <!-- Same window layout as Video view -->
		<image name="gamelist_background" extra="true">
			<path>./_inc/images/menu_glass.png</path>
			<origin>0 0</origin>
			<pos>0.003 0.0</pos>
			<size>0.63 0.92</size>
			<color>ffffffff</color>
			<zIndex>19</zIndex>
		</image>

		<text name="logoText">
			<color>FFFFFF</color>
			<origin>0.5 0</origin>
			<pos>0.315 0.04</pos>
			<fontSize>0.055</fontSize>
			<fontPath>./_inc/fonts/Erbaum-Bold.otf</fontPath>
	    	</text>
		
		<image name="logo">
			<origin>0.5 0</origin>
			<pos>0.315 0.04</pos>
			<maxSize>0.45 0.08</maxSize>
		</image>
		

		<image name="metadata_background" extra="true">
			<path>./_inc/images/video_indent_logo_${FPlogo}.png</path>
			<origin>0 0</origin>
			<pos>0.64 0.02</pos>
			<size>0.35 0.89</size>
			<color>ffffff33</color>
			<zIndex>19</zIndex>
		</image>
	</view>

	<view name="grid"> <!-- Grid layout -->
   		<imagegrid name="gamegrid">

			<pos>0.03 0.22</pos>

			<size>0.567 0.67</size>

			<margin>0 0</margin>

			<gameImage>./_inc/images/missing_logo_${FPlogo}.png</gameImage>

			<folderImage>./_inc/images/missing_logo_${FPlogo}.png</folderImage>

		</imagegrid>


		<gridtile name="default">

			<size>0.2835 0.2233</size>

			<padding>11 11</padding>

			<backgroundColor>${FPselectColor}00</backgroundColor>

		</gridtile>


		<gridtile name="selected">

			<size>0.2835 0.2233</size>

			<padding>6 6</padding>

			<backgroundColor>${FPselectColor}ff</backgroundColor>

		</gridtile>


		<text name="md_name">

			<color>ffffff</color>

			<pos>0.03 0.14</pos>

			<size>0.567 0.06</size>

			<fontPath>./_inc/fonts/Helsinki-Narrow.ttf</fontPath>

			<alignment>center</alignment>

			<fontSize>0.06</fontSize>

		</text>
	</view>

	<view name="grid"> <!-- layout metadata -->
<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount">
			<color>FFFFFF</color>
			<fontSize>0.04</fontSize>
			<fontPath>./_inc/fonts/Helsinki-Narrow.ttf</fontPath>
			<size>0.155 0.055</size>
			<alignment>right</alignment>
			<lineSpacing>1.0</lineSpacing>
		</text>
		<text name="md_developer, md_publisher, md_genre, md_players, md_playcount">
			<color>FFFFFF</color>

			<fontSize>0.045</fontSize>
			<fontPath>./_inc/fonts/Helsinki-Narrow.ttf</fontPath>
			<size>0.175 0.055</size>
			<lineSpacing>1.0</lineSpacing>
		</text>
		<datetime name="md_releasedate, md_lastplayed">	
			<color>FFFFFF</color>
			<fontSize>0.045</fontSize>
			<fontPath>./_inc/fonts/Helsinki-Narrow.ttf</fontPath>
		</datetime>

		<text name="md_lbl_rating">
			<pos>1 1</pos>
		</text>
		<rating name="md_rating">
			<pos>0.65 0.84</pos>
			<size>0.185 0.055</size>
			<filledPath>./_inc/images/star_full.png</filledPath>
			<unfilledPath>./_inc/images/star_hollow.png</unfilledPath>
			<color>ffffff</color>
		</rating>

		<text name="md_lbl_players">
			<pos>1 1</pos>
		</text>
		<text name="md_players">
			<pos>0.96 0.84</pos>
			<origin>1 0</origin>
			<alignment>right</alignment>
		</text>
		<text name="players_custom_label" extra="true">
			<pos>0.962 0.84</pos>
			<fontSize>0.045</fontSize>
			<size>0.035 0.055</size>
			<lineSpacing>1.0</lineSpacing>
			<fontPath>./_inc/fonts/Helsinki-Narrow.ttf</fontPath>
			<alignment>left</alignment>
			<text>P</text>
			<color>ffffff</color>
			<origin>0 0</origin>
			<zIndex>30</zIndex>
		</text>
		
		<text name="md_lbl_releasedate">
			<pos>0.65 0.03</pos>
		</text>
		<datetime name="md_releasedate">
			<pos>0.8075 0.0265</pos>
		</datetime>

		<text name="md_lbl_developer">
			<pos>0.65 0.08</pos>
		</text>
		<text name="md_developer">
			<pos>0.8075 0.08</pos>
		</text>

		<text name="md_lbl_publisher">
			<pos>0.65 0.13</pos>
		</text>
		<text name="md_publisher">
			<pos>0.8075 0.13</pos>
		</text>

		<text name="md_lbl_genre">
			<pos>0.65 0.18</pos>
		</text>
		<text name="md_genre">
			<pos>0.8075 0.18</pos>
		</text>

		<text name="md_lbl_lastplayed">
			<pos>0.65 0.235</pos>
		</text>
		<datetime name="md_lastplayed">
			<pos>0.8075 0.2315</pos>
		</datetime>

		<text name="md_lbl_playcount">
			<pos>0.65 0.285</pos>
		</text>
		<text name="md_playcount">
			<pos>0.8075 0.285</pos>
		</text>	</view>

</theme>