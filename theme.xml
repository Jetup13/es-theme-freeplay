<theme>

    <formatVersion>4</formatVersion>
	
	<variables>

	<FPthemeColor>6d60a3</FPthemeColor>
	<FPselectColor>6d60a3</FPselectColor>
	<FPtextColor>ffffff</FPtextColor>

	<!-- THEME COLORS - multicolor= , indigo=6d60a3, yellow=ffff00 -->
	<!-- SELECT COLORS - multicolor=, indigo=6d60a3, yellow=ffff00 -->
	<!-- TEXT COLORS - multicolor=, indigo/black=ffffff, black/yellow=000000 -->	
	</variables>
	
    <include>./freeplay.xml</include>

    <view name="system, basic, detailed, video">
		<image name="logo">
			<path>./${system.theme}/system.svg</path>
		</image>
		
		<textlist name="gamelist">
			<selectorColor>${FPselectColor}</selectorColor>
		</textlist>
	</view>
    
	 <view name="system">
		<image name="buttonmap" extra="true">
			<path>./${system.theme}/buttons.svg</path>
			<origin>0.5 0.5</origin>
			<pos>0.5 0.220</pos>
			<maxSize>1 0.320</maxSize>
			<color>${FPselectColor}66</color>
		</image>
		
		<textlist name="gamelist">
			<selectorColor>${FPselectColor}</selectorColor>
		</textlist>
	</view>
	
	<view name="basic"></view>
    
	<view name="detailed"></view>

</theme>
